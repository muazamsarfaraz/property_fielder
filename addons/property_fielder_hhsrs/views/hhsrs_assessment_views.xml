<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- HHSRS Assessment Tree View -->
    <record id="view_hhsrs_assessment_tree" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.assessment.tree</field>
        <field name="model">property_fielder.hhsrs.assessment</field>
        <field name="arch" type="xml">
            <tree decoration-danger="hhsrs_category == '1'" decoration-warning="hhsrs_band in ('D','E','F')">
                <field name="name"/>
                <field name="property_id"/>
                <field name="hazard_type_id"/>
                <field name="assessment_date"/>
                <field name="hhsrs_score" widget="float"/>
                <field name="hhsrs_band"/>
                <field name="hhsrs_category" widget="badge" 
                       decoration-danger="hhsrs_category == '1'"
                       decoration-warning="hhsrs_category == '2'"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'confirmed'"
                       decoration-muted="state == 'superseded'"/>
            </tree>
        </field>
    </record>
    
    <!-- HHSRS Assessment Form View -->
    <record id="view_hhsrs_assessment_form" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.assessment.form</field>
        <field name="model">property_fielder.hhsrs.assessment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_supersede" string="Supersede" type="object"
                            invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Property &amp; Hazard">
                            <field name="property_id"/>
                            <field name="hazard_type_id"/>
                            <field name="location"/>
                        </group>
                        <group string="Assessment Details">
                            <field name="assessment_date"/>
                            <field name="assessor_id"/>
                            <field name="inspection_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="HHSRS Scoring" name="scoring">
                            <group>
                                <group string="Likelihood">
                                    <field name="likelihood_band_id"/>
                                </group>
                                <group string="Outcome Probabilities (must sum to 100%)">
                                    <field name="outcome_prob_class_1" widget="percentage"/>
                                    <field name="outcome_prob_class_2" widget="percentage"/>
                                    <field name="outcome_prob_class_3" widget="percentage"/>
                                    <field name="outcome_prob_class_4" widget="percentage"/>
                                </group>
                            </group>
                            <group string="Results">
                                <group>
                                    <field name="hhsrs_score" widget="float"/>
                                    <field name="hhsrs_band"/>
                                    <field name="hhsrs_category" widget="badge"
                                           decoration-danger="hhsrs_category == '1'"
                                           decoration-warning="hhsrs_category == '2'"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Vulnerable Groups" name="vulnerable">
                            <group>
                                <field name="vulnerable_group_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Spread of Harm">
                                <field name="spread_of_harm"/>
                            </group>
                        </page>
                        
                        <page string="Deficiencies &amp; Remedies" name="deficiencies">
                            <group>
                                <field name="deficiency_description"/>
                            </group>
                            <group>
                                <field name="recommended_action"/>
                            </group>
                            <group>
                                <group>
                                    <field name="estimated_cost"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                                <group>
                                    <field name="urgency"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Evidence" name="evidence">
                            <field name="photo_ids" widget="many2many_binary"/>
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- HHSRS Assessment Search View -->
    <record id="view_hhsrs_assessment_search" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.assessment.search</field>
        <field name="model">property_fielder.hhsrs.assessment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_id"/>
                <field name="hazard_type_id"/>
                <filter name="filter_cat1" string="Category 1" domain="[('hhsrs_category', '=', '1')]"/>
                <filter name="filter_cat2" string="Category 2" domain="[('hhsrs_category', '=', '2')]"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_property" string="Property" context="{'group_by': 'property_id'}"/>
                    <filter name="group_hazard" string="Hazard Type" context="{'group_by': 'hazard_type_id'}"/>
                    <filter name="group_category" string="Category" context="{'group_by': 'hhsrs_category'}"/>
                    <filter name="group_band" string="Band" context="{'group_by': 'hhsrs_band'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- HHSRS Assessment Action -->
    <record id="action_hhsrs_assessment" model="ir.actions.act_window">
        <field name="name">HHSRS Assessments</field>
        <field name="res_model">property_fielder.hhsrs.assessment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first HHSRS Assessment
            </p>
            <p>
                Assess housing hazards using the Housing Health and Safety Rating System.
            </p>
        </field>
    </record>
    
</odoo>

