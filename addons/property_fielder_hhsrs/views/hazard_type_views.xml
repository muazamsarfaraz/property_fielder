<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Hazard Type Tree View -->
    <record id="view_hazard_type_tree" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.hazard.type.tree</field>
        <field name="model">property_fielder.hhsrs.hazard.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="group"/>
                <field name="is_awaab_covered" widget="boolean"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- Hazard Type Form View -->
    <record id="view_hazard_type_form" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.hazard.type.form</field>
        <field name="model">property_fielder.hhsrs.hazard.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Hazard Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="group"/>
                            <field name="is_awaab_covered"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Assessment Guide" name="guide">
                            <field name="assessment_guide"/>
                        </page>
                        <page string="Typical Remedies" name="remedies">
                            <field name="typical_remedies"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Hazard Type Search View -->
    <record id="view_hazard_type_search" model="ir.ui.view">
        <field name="name">property_fielder.hhsrs.hazard.type.search</field>
        <field name="model">property_fielder.hhsrs.hazard.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_awaab" string="Awaab Covered" domain="[('is_awaab_covered', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_group" string="Hazard Group" context="{'group_by': 'group'}"/>
                </group>
            </search>
        </field>
    </record>
    
</odoo>

