<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- SMS Configuration Form View -->
    <record id="view_sms_config_form" model="ir.ui.view">
        <field name="name">property_fielder.sms.config.form</field>
        <field name="model">property_fielder.sms.config</field>
        <field name="arch" type="xml">
            <form string="SMS Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_sms" type="object" class="oe_stat_button" icon="fa-paper-plane">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Send Test SMS</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Configuration Name"/></h1>
                    </div>
                    <group>
                        <group string="Twilio Credentials">
                            <field name="account_sid" password="True"/>
                            <field name="auth_token" password="True"/>
                            <field name="phone_number"/>
                        </group>
                        <group string="Test Credentials">
                            <field name="use_test_credentials"/>
                            <field name="test_account_sid" password="True" invisible="not use_test_credentials"/>
                            <field name="test_auth_token" password="True" invisible="not use_test_credentials"/>
                        </group>
                    </group>
                    <group>
                        <group string="Notification Settings">
                            <field name="send_confirmation_sms"/>
                            <field name="send_reminder_sms"/>
                            <field name="reminder_hours_before" invisible="not send_reminder_sms"/>
                            <field name="send_completion_sms"/>
                        </group>
                        <group string="Rate Limiting">
                            <field name="max_sms_per_day"/>
                            <field name="sms_sent_today"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- SMS Configuration List View -->
    <record id="view_sms_config_list" model="ir.ui.view">
        <field name="name">property_fielder.sms.config.list</field>
        <field name="model">property_fielder.sms.config</field>
        <field name="arch" type="xml">
            <list string="SMS Configurations">
                <field name="name"/>
                <field name="phone_number"/>
                <field name="sms_sent_today"/>
                <field name="max_sms_per_day"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- SMS Template Form View -->
    <record id="view_sms_template_form" model="ir.ui.view">
        <field name="name">property_fielder.sms.template.form</field>
        <field name="model">property_fielder.sms.template</field>
        <field name="arch" type="xml">
            <form string="SMS Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="template_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="available_variables" readonly="1"/>
                        </group>
                    </group>
                    <group string="Message">
                        <field name="message_body" nolabel="1" placeholder="Enter message with {variables}..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- SMS Template List View -->
    <record id="view_sms_template_list" model="ir.ui.view">
        <field name="name">property_fielder.sms.template.list</field>
        <field name="model">property_fielder.sms.template</field>
        <field name="arch" type="xml">
            <list string="SMS Templates">
                <field name="name"/>
                <field name="code"/>
                <field name="template_type" widget="badge"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_sms_config" model="ir.actions.act_window">
        <field name="name">SMS Configuration</field>
        <field name="res_model">property_fielder.sms.config</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="action_sms_templates" model="ir.actions.act_window">
        <field name="name">SMS Templates</field>
        <field name="res_model">property_fielder.sms.template</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>

