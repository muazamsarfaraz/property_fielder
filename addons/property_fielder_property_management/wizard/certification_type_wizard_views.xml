<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Wizard Form View -->
        <record id="view_certification_type_wizard_form" model="ir.ui.view">
            <field name="name">property_fielder.certification.type.wizard.form</field>
            <field name="model">property_fielder.certification.type.wizard</field>
            <field name="arch" type="xml">
                <form string="Quick Create Certification Type">
                    <group>
                        <group>
                            <field name="template" widget="radio"/>
                        </group>
                    </group>
                    <separator string="Certification Details"/>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Boiler Service Certificate"/>
                            <field name="code" placeholder="e.g., BOILER"/>
                            <field name="flage_category"/>
                        </group>
                        <group>
                            <label for="validity_period"/>
                            <div class="o_row">
                                <field name="validity_period" class="oe_inline"/>
                                <span class="oe_inline">days</span>
                            </div>
                            <label for="warning_period"/>
                            <div class="o_row">
                                <field name="warning_period" class="oe_inline"/>
                                <span class="oe_inline">days before expiry</span>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Describe what this certification covers..."/>
                    </group>
                    <footer>
                        <button string="Create" type="object" name="action_create_certification_type" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Wizard Action -->
        <record id="action_certification_type_wizard" model="ir.actions.act_window">
            <field name="name">Quick Create Certification Type</field>
            <field name="res_model">property_fielder.certification.type.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>

