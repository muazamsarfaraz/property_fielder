<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        
        <!-- Property Image Form View -->
        <record id="view_property_image_form" model="ir.ui.view">
            <field name="name">property_fielder.property.image.form</field>
            <field name="model">property_fielder.property.image</field>
            <field name="arch" type="xml">
                <form string="Property Photo">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Photo description..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="property_id"/>
                                <field name="category"/>
                                <field name="is_main"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="taken_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes about this photo..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Property Image List View -->
        <record id="view_property_image_list" model="ir.ui.view">
            <field name="name">property_fielder.property.image.list</field>
            <field name="model">property_fielder.property.image</field>
            <field name="arch" type="xml">
                <list string="Property Photos">
                    <field name="sequence" widget="handle"/>
                    <field name="image_small" widget="image" options="{'size': [50, 50]}"/>
                    <field name="name"/>
                    <field name="property_id"/>
                    <field name="category" widget="badge"/>
                    <field name="is_main"/>
                    <field name="taken_date"/>
                </list>
            </field>
        </record>
        
        <!-- Property Image Kanban View -->
        <record id="view_property_image_kanban" model="ir.ui.view">
            <field name="name">property_fielder.property.image.kanban</field>
            <field name="model">property_fielder.property.image</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image_medium"/>
                    <field name="category"/>
                    <field name="is_main"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="image_medium" widget="image"/>
                                </div>
                                <div class="o_kanban_details mt-2">
                                    <strong t-if="record.name.raw_value"><field name="name"/></strong>
                                    <div><field name="category" widget="badge"/></div>
                                    <span t-if="record.is_main.raw_value" class="badge text-bg-primary">Main Image</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>

