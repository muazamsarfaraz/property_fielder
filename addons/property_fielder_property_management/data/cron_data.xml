<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Daily Certification Status Update -->
        <record id="ir_cron_certification_status_update" model="ir.cron">
            <field name="name">Property Fielder: Update Certification Status</field>
            <field name="model_id" ref="model_property_fielder_property_certification"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_certification_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        
        <!-- Weekly Expiry Reminder Emails -->
        <record id="ir_cron_certification_expiry_reminders" model="ir.cron">
            <field name="name">Property Fielder: Send Certification Expiry Reminders</field>
            <field name="model_id" ref="model_property_fielder_property_certification"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_expiry_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now().replace(hour=8, minute=0, second=0) + timedelta(days=(7 - DateTime.now().weekday()) % 7 or 7)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
        
    </data>
</odoo>

