<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Skill List View -->
    <record id="view_field_service_skill_list" model="ir.ui.view">
        <field name="name">property_fielder.skill.list</field>
        <field name="model">property_fielder.skill</field>
        <field name="arch" type="xml">
            <list string="Skills" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="color" widget="color_picker"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Skill Form View -->
    <record id="view_field_service_skill_form" model="ir.ui.view">
        <field name="name">property_fielder.skill.form</field>
        <field name="model">property_fielder.skill</field>
        <field name="arch" type="xml">
            <form string="Skill">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Describe this skill..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Skill Action -->
    <record id="action_field_service_skill" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="res_model">property_fielder.skill</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first skill
            </p>
            <p>
                Skills help match jobs to qualified inspectors.
                Examples: Gas Safety, Electrical, HVAC, Plumbing
            </p>
        </field>
    </record>
</odoo>

