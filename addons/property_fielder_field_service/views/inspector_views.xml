<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inspector List View -->
    <record id="view_field_service_inspector_list" model="ir.ui.view">
        <field name="name">property_fielder.inspector.list</field>
        <field name="model">property_fielder.inspector</field>
        <field name="arch" type="xml">
            <list string="Inspectors" create="1" edit="1" delete="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="skill_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="shift_start" widget="float_time"/>
                <field name="shift_end" widget="float_time"/>
                <field name="max_jobs_per_day"/>
                <field name="home_latitude"/>
                <field name="home_longitude"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Inspector Form View -->
    <record id="view_field_service_inspector_form" model="ir.ui.view">
        <field name="name">property_fielder.inspector.form</field>
        <field name="model">property_fielder.inspector</field>
        <field name="arch" type="xml">
            <form string="Inspector">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_jobs" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="job_count" widget="statinfo" string="Jobs"/>
                        </button>
                        <button name="action_view_routes" type="object" class="oe_stat_button" icon="fa-route">
                            <field name="route_count" widget="statinfo" string="Routes"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., John Smith"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="employee_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group name="capacity">
                            <field name="max_jobs_per_day"/>
                            <field name="vehicle_capacity"/>
                        </group>
                    </group>
                    <group>
                        <group name="shift_times">
                            <label for="shift_start" string="Shift Hours"/>
                            <div class="o_row">
                                <field name="shift_start" widget="float_time" class="oe_inline"/> - 
                                <field name="shift_end" widget="float_time" class="oe_inline"/>
                            </div>
                        </group>
                        <group name="home_location">
                            <label for="home_latitude" string="Home Location"/>
                            <div class="o_row">
                                <field name="home_latitude" placeholder="Latitude" class="oe_inline"/>
                                <field name="home_longitude" placeholder="Longitude" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Skills" name="skills">
                            <field name="skill_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Inspector Kanban View -->
    <record id="view_field_service_inspector_kanban" model="ir.ui.view">
        <field name="name">property_fielder.inspector.kanban</field>
        <field name="model">property_fielder.inspector</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="skill_ids"/>
                <field name="job_count"/>
                <field name="route_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle"><field name="employee_id"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="skill_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span><i class="fa fa-tasks"/> <field name="job_count"/> jobs</span>
                                    <span class="ms-2"><i class="fa fa-route"/> <field name="route_count"/> routes</span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="active" widget="boolean_toggle"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Inspector Search View -->
    <record id="view_field_service_inspector_search" model="ir.ui.view">
        <field name="name">property_fielder.inspector.search</field>
        <field name="model">property_fielder.inspector</field>
        <field name="arch" type="xml">
            <search string="Search Inspectors">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="skill_ids"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Available Today" name="available_today" domain="[]"/>
                <separator/>
                <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
            </search>
        </field>
    </record>

    <!-- Inspector Action -->
    <record id="action_field_service_inspector" model="ir.actions.act_window">
        <field name="name">Inspectors</field>
        <field name="res_model">property_fielder.inspector</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first inspector
            </p>
            <p>
                Inspectors are your field service technicians.
                Assign skills, set availability, and manage their schedules.
            </p>
        </field>
    </record>
</odoo>

