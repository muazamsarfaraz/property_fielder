<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Route List View -->
    <record id="view_field_service_route_list" model="ir.ui.view">
        <field name="name">property_fielder.route.list</field>
        <field name="model">property_fielder.route</field>
        <field name="arch" type="xml">
            <list string="Routes" create="0" edit="0" delete="1">
                <field name="route_number"/>
                <field name="name"/>
                <field name="inspector_id"/>
                <field name="route_date"/>
                <field name="job_count"/>
                <field name="total_distance_km" widget="float" digits="[16, 2]"/>
                <field name="total_time_minutes"/>
                <field name="optimization_id"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-muted="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Route Form View -->
    <record id="view_field_service_route_form" model="ir.ui.view">
        <field name="name">property_fielder.route.form</field>
        <field name="model">property_fielder.route</field>
        <field name="arch" type="xml">
            <form string="Route" create="0">
                <header>
                    <button name="action_share_schedule" string="Share Schedule" type="object" class="btn-primary" icon="fa-share-alt"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="route_number" readonly="1"/>
                        </h1>
                        <label for="name"/>
                        <field name="name" placeholder="e.g., North London Route"/>
                    </div>
                    <group>
                        <group name="route_details">
                            <field name="inspector_id" readonly="1"/>
                            <field name="route_date" readonly="1"/>
                            <field name="optimization_id" readonly="1"/>
                        </group>
                        <group name="metrics">
                            <field name="total_distance_km" widget="float" digits="[16, 2]"/>
                            <field name="total_time_minutes"/>
                            <field name="total_drive_time_minutes"/>
                            <field name="total_work_time_minutes"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Jobs" name="jobs">
                            <field name="job_ids" readonly="1">
                                <list editable="bottom">
                                    <field name="job_number" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="earliest_start" readonly="1"/>
                                    <field name="latest_end" readonly="1"/>
                                    <field name="duration_minutes" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Route Kanban View -->
    <record id="view_field_service_route_kanban" model="ir.ui.view">
        <field name="name">property_fielder.route.kanban</field>
        <field name="model">property_fielder.route</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="route_number"/>
                <field name="name"/>
                <field name="inspector_id"/>
                <field name="route_date"/>
                <field name="job_count"/>
                <field name="total_distance_km"/>
                <field name="total_time_minutes"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="route_number"/></strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle"><field name="name"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <i class="fa fa-user"/> <field name="inspector_id"/>
                                <br/>
                                <i class="fa fa-calendar"/> <field name="route_date"/>
                                <br/>
                                <i class="fa fa-tasks"/> <field name="job_count"/> jobs
                                <br/>
                                <i class="fa fa-road"/> <field name="total_distance_km" widget="float" digits="[16, 1]"/> km
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Route Search View -->
    <record id="view_field_service_route_search" model="ir.ui.view">
        <field name="name">property_fielder.route.search</field>
        <field name="model">property_fielder.route</field>
        <field name="arch" type="xml">
            <search string="Search Routes">
                <field name="route_number"/>
                <field name="name"/>
                <field name="inspector_id"/>
                <field name="optimization_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('route_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Inspector" name="group_inspector" context="{'group_by': 'inspector_id'}"/>
                <filter string="Date" name="group_date" context="{'group_by': 'route_date'}"/>
                <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- Route Actions -->
    <record id="action_field_service_route" model="ir.actions.act_window">
        <field name="name">Routes</field>
        <field name="res_model">property_fielder.route</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No routes yet
            </p>
            <p>
                Routes are created automatically when you run route optimization.
                Each route contains a sequence of jobs assigned to an inspector.
            </p>
        </field>
    </record>

    <record id="action_field_service_route_today" model="ir.actions.act_window">
        <field name="name">Today's Routes</field>
        <field name="res_model">property_fielder.route</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="domain">[('route_date', '=', context_today().strftime('%Y-%m-%d'))]</field>
    </record>
</odoo>

