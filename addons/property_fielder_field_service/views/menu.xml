<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_field_service_root"
              name="Field Service"
              sequence="10"
              web_icon="property_fielder_field_service,static/description/icon.png"/>

    <!-- Dashboard -->
    <menuitem id="menu_field_service_dashboard"
              name="Dashboard"
              parent="menu_field_service_root"
              action="action_field_service_dashboard"
              sequence="1"/>

    <!-- Dispatch (Map + Timeline View) -->
    <menuitem id="menu_field_service_dispatch"
              name="Dispatch"
              parent="menu_field_service_root"
              action="action_field_service_dispatch_new"
              sequence="2"/>

    <!-- Jobs -->
    <menuitem id="menu_field_service_jobs"
              name="Jobs"
              parent="menu_field_service_root"
              sequence="10"/>

    <menuitem id="menu_field_service_jobs_all"
              name="All Jobs"
              parent="menu_field_service_jobs"
              action="action_field_service_job"
              sequence="1"/>

    <menuitem id="menu_field_service_jobs_today"
              name="Today's Jobs"
              parent="menu_field_service_jobs"
              action="action_field_service_job_today"
              sequence="2"/>

    <menuitem id="menu_field_service_jobs_unassigned"
              name="Unassigned Jobs"
              parent="menu_field_service_jobs"
              action="action_field_service_job_unassigned"
              sequence="3"/>

    <!-- Inspectors -->
    <menuitem id="menu_field_service_inspectors"
              name="Inspectors"
              parent="menu_field_service_root"
              action="action_field_service_inspector"
              sequence="20"/>

