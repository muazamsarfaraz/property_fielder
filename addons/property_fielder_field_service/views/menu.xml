    <menuitem id="menu_field_service_routes"
              name="Routes"
              parent="menu_field_service_root"
              sequence="30"/>

    <menuitem id="menu_field_service_routes_all"
              name="All Routes"
              parent="menu_field_service_routes"
              action="action_field_service_route"
              sequence="1"/>

    <menuitem id="menu_field_service_routes_today"
              name="Today's Routes"
              parent="menu_field_service_routes"
              action="action_field_service_route_today"
              sequence="2"/>

    <!-- Change Requests -->
    <menuitem id="menu_field_service_change_requests"
              name="Change Requests"
              parent="menu_field_service_root"
              action="action_change_request"
              sequence="35"/>

    <!-- Optimization -->
    <menuitem id="menu_field_service_optimization"
              name="Optimization"
              parent="menu_field_service_root"
              sequence="40"/>

    <menuitem id="menu_field_service_optimization_new"
              name="Run Optimization"
              parent="menu_field_service_optimization"
              action="action_field_service_optimization_wizard"
              sequence="1"/>

    <menuitem id="menu_field_service_optimization_history"
              name="Optimization History"
              parent="menu_field_service_optimization"
              action="action_field_service_optimization"
              sequence="2"/>

    <!-- Configuration -->
    <menuitem id="menu_field_service_config"
              name="Configuration"
              parent="menu_field_service_root"
              sequence="100"/>

    <menuitem id="menu_field_service_config_skills"
              name="Skills"
              parent="menu_field_service_config"
              action="action_field_service_skill"
              sequence="1"/>

    <menuitem id="menu_field_service_config_settings"
              name="Settings"
              parent="menu_field_service_config"
              action="action_field_service_settings"
              sequence="100"/>
</odoo>

