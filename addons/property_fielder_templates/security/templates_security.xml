<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Templates Privilege -->
        <record id="res_groups_privilege_templates" model="res.groups.privilege">
            <field name="name">Inspection Templates</field>
            <field name="sequence">15</field>
            <field name="category_id" ref="base.module_category_services"/>
        </record>

        <!-- Template User - Can use templates for inspections -->
        <record id="group_template_user" model="res.groups">
            <field name="name">User</field>
            <field name="comment">Can use templates for inspections</field>
            <field name="sequence">10</field>
            <field name="implied_ids" eval="[(4, ref('property_fielder_field_service.group_field_service_user'))]"/>
            <field name="privilege_id" ref="res_groups_privilege_templates"/>
        </record>

        <!-- Template Manager - Can create and edit templates -->
        <record id="group_template_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">Can create, edit, and manage inspection templates</field>
            <field name="sequence">20</field>
            <field name="implied_ids" eval="[(4, ref('group_template_user'))]"/>
            <field name="privilege_id" ref="res_groups_privilege_templates"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>

    <data noupdate="1">

        <!-- Record Rules -->

        <!-- All users can read active templates -->
        <record id="rule_template_read_active" model="ir.rule">
            <field name="name">Read Active Templates</field>
            <field name="model_id" ref="model_property_fielder_inspection_template"/>
            <field name="domain_force">[('state', '=', 'active')]</field>
            <field name="groups" eval="[(4, ref('group_template_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can access all templates -->
        <record id="rule_template_manager_all" model="ir.rule">
            <field name="name">Managers Access All Templates</field>
            <field name="model_id" ref="model_property_fielder_inspection_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_template_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>

