<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Access Attempt List View -->
    <record id="view_access_attempt_list" model="ir.ui.view">
        <field name="name">property_fielder.access.attempt.list</field>
        <field name="model">property_fielder.access.attempt</field>
        <field name="arch" type="xml">
            <list>
                <field name="defect_id"/>
                <field name="property_id"/>
                <field name="attempt_date"/>
                <field name="result" widget="badge" decoration-success="result == 'granted'" decoration-danger="result == 'refused'" decoration-warning="result == 'no_answer'" decoration-info="result == 'rescheduled'"/>
                <field name="contractor_id"/>
                <field name="inspector_id"/>
                <field name="reason"/>
                <field name="rescheduled_date"/>
            </list>
        </field>
    </record>
    
    <!-- Access Attempt Form View -->
    <record id="view_access_attempt_form" model="ir.ui.view">
        <field name="name">property_fielder.access.attempt.form</field>
        <field name="model">property_fielder.access.attempt</field>
        <field name="arch" type="xml">
            <form string="Access Attempt">
                <sheet>
                    <group>
                        <group>
                            <field name="defect_id"/>
                            <field name="property_id"/>
                            <field name="attempt_date"/>
                            <field name="result"/>
                        </group>
                        <group>
                            <field name="contractor_id"/>
                            <field name="inspector_id"/>
                            <field name="rescheduled_date" invisible="result != 'rescheduled'"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason" placeholder="Reason for refusal or reschedule..."/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                    <group>
                        <field name="photo_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Access Attempt Search View -->
    <record id="view_access_attempt_search" model="ir.ui.view">
        <field name="name">property_fielder.access.attempt.search</field>
        <field name="model">property_fielder.access.attempt</field>
        <field name="arch" type="xml">
            <search>
                <field name="defect_id"/>
                <field name="property_id"/>
                <filter name="filter_refused" string="Refused" domain="[('result', '=', 'refused')]"/>
                <filter name="filter_no_answer" string="No Answer" domain="[('result', '=', 'no_answer')]"/>
                <separator/>
                <filter name="group_result" string="Result" context="{'group_by': 'result'}"/>
                <filter name="group_property" string="Property" context="{'group_by': 'property_id'}"/>
            </search>
        </field>
    </record>
    
    <!-- Access Attempt Action -->
    <record id="action_access_attempt" model="ir.actions.act_window">
        <field name="name">Access Attempts</field>
        <field name="res_model">property_fielder.access.attempt</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_access_attempt_search"/>
    </record>
    
</odoo>

