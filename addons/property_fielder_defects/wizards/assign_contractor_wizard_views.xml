<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Assign Contractor Wizard Form View -->
    <record id="view_assign_contractor_wizard_form" model="ir.ui.view">
        <field name="name">property_fielder.assign.contractor.wizard.form</field>
        <field name="model">property_fielder.assign.contractor.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Contractor">
                <group>
                    <group string="Defect Information">
                        <field name="defect_id" readonly="1" invisible="1"/>
                        <field name="property_name" readonly="1"/>
                        <field name="severity" readonly="1"/>
                        <field name="deadline_date" readonly="1"/>
                    </group>
                    <group string="Assignment">
                        <field name="contractor_id" 
                               options="{'no_create': True}"
                               placeholder="Select a contractor..."/>
                        <field name="send_notification"/>
                    </group>
                </group>
                
                <group string="Defect Description" col="1">
                    <field name="defect_description" readonly="1" nolabel="1"/>
                </group>
                
                <group string="Additional Notes for Contractor" col="1">
                    <field name="additional_notes" nolabel="1"
                           placeholder="Enter any additional instructions for the contractor..."/>
                </group>
                
                <footer>
                    <button name="action_assign" string="Assign Contractor" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action to open wizard -->
    <record id="action_assign_contractor_wizard" model="ir.actions.act_window">
        <field name="name">Assign Contractor</field>
        <field name="res_model">property_fielder.assign.contractor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

