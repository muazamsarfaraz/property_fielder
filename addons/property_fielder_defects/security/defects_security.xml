<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Defects Manager Group -->
        <record id="group_defects_manager" model="res.groups">
            <field name="name">Defects Manager</field>
            <field name="category_id" ref="property_fielder_property_management.module_category_property_fielder"/>
            <field name="implied_ids" eval="[(4, ref('property_fielder_property_management.group_property_user'))]"/>
            <field name="comment">Can manage defects, approve costs, and assign contractors</field>
        </record>
        
        <!-- Defects User Group -->
        <record id="group_defects_user" model="res.groups">
            <field name="name">Defects User</field>
            <field name="category_id" ref="property_fielder_property_management.module_category_property_fielder"/>
            <field name="comment">Can view and update defects</field>
        </record>
        
    </data>
</odoo>

